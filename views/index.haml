%html
  %head
    %link(rel="stylesheet" type="text/css" href="css/bootstrap.css")
    :css
      body {
        padding-top: 60px;
        padding-botton: 40px;
        background-position: left 40px;
        background-attachment: fixed;
        background-repeat: repeat;
        background-color: #FAFAFA;
        font-family: 'Ubuntu', sans-serif;
        font-size: 16px;
      }
      .sidebar-nav {
        padding: 9px 0px 10px 0;
      }
      .container-fluid {
        padding-left: 250px;
        padding-right: 250px;
      }

    %link(rel="stylesheet" type="text/css" href="css/bootstrap-responsive.css")
    %link(href='http://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700,300italic,400italic,500italic,700italic' rel='stylesheet' type='text/css')    
    %link(rel="stylesheet" type="text/css" href="css/font-awesome.css")

    :css
      .container-940 {
        width:1000px;
      }
      .container-780 {
        height: 780px;
      }
      .sidebar{
        margin-top: -10px;
        width: 200px;
      }
      .well {
        height: 100%;
        border-radius: 0px;
        -moz-border-radius: 0px;
      }
      .main-content {
        width: 740px;
        margin-left: 0px;
        margin-top: -10px;
      }
      .footer-hr {
        margin-top: 0px;
      }
      .adjust-padding-bottom {
        padding-bottom: 15px;
      }
      .remove-margin-bottom {
        margin-bottom: 0px;
      }
      .nav-list > li > a,
      .nav-list .nav-header {
        padding: 5px 18px;
      }
      .profile-pic-container {
        padding: 10px 10px 10px 0px;
      } 
      .profile-pic {
        float: left;
        height: 50px;
        width: 50px;
        overflow:hidden;
        padding: 5px;
        padding-left: 18px;
        padding-right: 10px;
      }
      dep {
        font-size: 10px;
      }
      year {
        font-size: 10px;
      }
      .sidebar-count {
        margin-right: -12px;
        float: right;
      }
      .navbar .app-logo {
        font-family: 'Ubuntu', sans-serif;
        font-weight: 500;
      }
      .transparent {
        background: url(img/wash-white-30.png);
      }
      .inside-main{
        margin: 0px;
        padding: 1px;
        position: relative;
      }
      .encap-main {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 20px;
      }
      .inside-container {
        margin: 0px;
        padding: 0px;
      }
      hr {
        border-color: gray;
      }
      .main-header-partition {
        margin: 5px;
      }
      .main-content-fixed-layout {
        padding-bottom: 790px;
        margin-bottom: -800px;
      }
      .remove-border {
        border: none;
      }
      .remove-border-radius {
        border-radius: 0;
      }
      .user-small {
        height: 38px;
        width: 36px;
      }
      .navbar {
        height: 60px;
      }
      .navbar .brand {
        padding: 12px 20px 12px;
        font-size: 32px;
      }
      .navbar-inner {
        height: 100%;
      }
      .user-info {
        float: left;
        width: 150px;
        height: 100%;
        text-align: left;
        padding-top: 10px;
      }
      .nav {
        margin-top: 40px;
      }
      li { 
        height: auto;
        padding: 4px;
        padding-top: 10px;
      }
      .space-info {
        font-size: 10px;
      }
      .space-info > a {
        padding: 1px;
        color: #999;
        font-size: 11px;
      }

      .space-name {
        font-size: 20px;
        color: black;
        font-weight: 500;
       }
       .row-fluid > .main-content {
         margin-left: 0px;
         padding-top: 10px;
       }
       .post-info {
         float: left;
       }
       .post-actions {
         float: right;
       }
       .post-actions > a {
         float: left;
         padding: 14px 14px 0px 0px;
         font-size: 13px;
         color: #666;
       }
       .post-info > div {
         padding: 14px 14px 0px 0px;
         float: left;
         font-size: 13px;
         color: #666;
       }
       .post-info > div > i {
       }
       .posts {
         margin-left: 20px;
         padding: 10px;
       }
       .post-title > a {
         font-size: 16px;
         font-weight: 500;
         color: black;
       }
       .posts:hover {
         background-color: #F1F1F1;
       }
       #main-content .space {
         margin-top: 15px;
         margin-left: 20px;
       }
       #main-content .space-actions {
         margin-top: 4px;
         margin-left: 20px;
         margin-bottom: 30px;
       }
       #main-content .space > .space-profile-pic {
         padding: 10px;
         padding-left: 0px;
         float: left;
       }
       #main-content .space > .space-name {
         font-size: 25px;
         font-weight: 700;
         padding: 10px;
         padding-left: 68px;
         padding-top: 12px;
       }
       #main-content .space > .space-url {
         padding-left: 72px;
       }
       #main-content .space > .space-url > a {
         font-size: 12px;
         color: #999;
       }
       .space-new-post > .input-prepend > input {
         border: 0;
         border-left: 4px solid;
         font-size: 16px;
         height: 36px;
         width: 75%;
       }
       .space-new-post {
         margin-left: 20px;
       }
       .loader {
         margin-left: 50%;
         margin-right: 50%;
         margin-top: 100px;
       } 
       .new-post-actions {
         display: none;
         margin-top: 10px;
         margin-bottom: 10px;
       }
       .new-post-actions > a {
         margin-right: 5px;
       }
       .post-content {
         margin-top: 70px;
         display: none;
       }
       .post-editor {
         display: none;
       }
    %script(src="js/jquery.js" type="text/javascript")
    %script(src="js/bootstrap-dropdown.js" type="text/javascript")
    %script(src="js/json2.js" type="text/javascript")
    %script(src="js/blogeur.js" type="text/javascript")    
    %script(src="js/tiny_mce/tiny_mce.js" type="text/javascript")    
  %body
    %div.navbar.navbar-fixed-top
      %div.navbar-inner
        %div.container.container-940
          %a.brand.app-logo(href="#") blogeur
    %div.container.container-940.container-780#container(style="height: auto;")
      %div.row-fluid(style="height: auto;")
        %div.span3
          %div.well.sidebar-nav
            %div.row-fluid(style="height: 60px;")
              %a.profile-pic(href="#{@user.profile_url}")
                %img(src="#{@user.profile_pic}" alt="Kumar Ishan")
              %strong.user-info= @user.display_name 
            %ul.nav.nav-list#sidebar
              - @spaces.each do |space|
                %li
                  %a.space-name(href="http://#{space.full_hostname}" data-url="#{space.hostname}")
                    = space.name
                  %div.space-info
                    %a(href="http://posterous.com/manage##{space.hostname}/people") 
                      - if space.followers_count == 1
                        #{space.followers_count} Follower 
                      - else
                        #{space.followers_count} Followers
                    %a(href="http://#{space.full_hostname}") 
                      #{space.posts_count} Posts 
                    %a(href="http://#{space.full_hostname}") 
                      #{space.views_count} Views
        %div.span13.main-content#main-content(style="height: auto;")
          %div.container-fluid.inside-container#main-content(style="height: auto; min-height: 800px;")

      %hr.footer-hr
      %footer
        %p@ Kumar Ishan 2012     
